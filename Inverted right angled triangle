#include <stdio.h>
 
int main () {
	/* a program to print star #2
	
	*****
	****    
	***
	** 
	*/
	
	int i, j,n;
	printf("Enter a number:\n");
	scanf("%d", &n);
	
	for (i = 1; i<= n; i++)
	{
		 for (j =1; j<= n-i+1; j++) //for (j =n; j>= i; i--)
		{
			printf("*");
		}
	   printf("\n");
	}
   return 0;
}
