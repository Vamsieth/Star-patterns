#include <stdio.h>

int main ()
{
	int i,j,n;
	printf("Enter a number:\n");
	scanf("%d", &n);
	
	/*	
	star pattern #4
	*
	**
	***
	****                     (n=5)
	*****	
	****
	***
	**
	*	
		
	*/
	for ( i = 1; i <= 2*n-1; i++){
		
		int col = i >n ? 2*n-i: i;
		
		for (int j = 1; j<= col; j++){
			
			printf("*");
		}
		printf("\n");
		
	}
	return 0;
}
